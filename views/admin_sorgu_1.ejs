        <div class="container">
          <div class="row">
            <div class="col-sm-4 input-s1" >
              <div style=" text-align: start;">
                <form action="/admin_search_sorgu_1" method="post">             
                  <p>Kullanıcı Adı (*): <input type="text" style="margin-top: 150px; border-style: hidden; " name="input_username" placeholder="Murat etc."></p>
                  <p>Proje Adı: <input type="text" style=" border-style: hidden; " name="project_name" placeholder="DevOps etc."></p>
                  <p>Ders Adı: <input type="text" style=" border-style: hidden; " name="lecture_name" placeholder="Araştırma Problemleri etc."></p>
                  <p>Anahtar Kelime: <input type="text" style=" border-style: hidden; " name="keys" placeholder="Virgülle Ayırınız!"></p>
                  <button type="submit" class="btn btn-secondary">Ara</button>
                </form>
            </div>
            </div>
          </div>   
        </div>
        <ul class="tilesWrap">
          <% for(let i = 0; i < search_result.length; i++) { %>
          <li>
            <h2><%= i + 1 %></h2>
            <h3><%= search_result[i].title %></h3>
            <p>
              <%= search_result[i].date %>
            </p>
            <p>
              <%= search_result[i].keys %>
            </p>
            <form action="/project" method="post">
              <button type="submit" name= "<%= search_result[i]._id %>">Ayrıntıları Görüntüle</button>
            </form>
          </li>
          <% } %>
        </ul>
